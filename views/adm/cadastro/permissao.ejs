<script>
function alterarBotao(event) {
    const botao = event.target;
    const nomeUsuario = botao.getAttribute('data-nome');

    if (botao.classList.contains('btn-dark')) {
        botao.classList.remove('btn-dark');
        botao.classList.add('btn-success');
        botao.textContent = 'Permitido';

        console.log(`${nomeUsuario} é um administrador.`);

    } else {
        botao.classList.remove('btn-success');
        botao.classList.add('btn-dark');
        botao.textContent = 'Permitir';

        console.log(`${nomeUsuario} não é mais um administrador.`);
    }
}

const botoes = document.querySelectorAll('.permitir-button');
botoes.forEach(botao => {
    botao.addEventListener('click', alterarBotao);
});
</script>
