  <script>
    function formatarCPF(campoCPF) {
    const inputCPF = document.getElementById(campoCPF);

    inputCPF.addEventListener('input', () => {
        // Remove qualquer caractere não numérico
        let cpfDigitado = inputCPF.value.replace(/\D/g, '');

        // Formata o CPF com os pontos e traço
        let cpfFormatado = '';
        for (let i = 0; i < cpfDigitado.length; i++) {
        if (i === 3 || i === 6) {
            cpfFormatado += '.';
        } else if (i === 9) {
            cpfFormatado += '-';
        }
        cpfFormatado += cpfDigitado[i];
        }

        inputCPF.value = cpfFormatado;
    });
    }
    formatarCPF('cpf')

    function formatarTelefone(campoTelefone) {
    
    const inputTelefone = document.getElementById(campoTelefone);

    inputTelefone.addEventListener('input', () => {
        // Remove qualquer caractere não numérico
        let numeroTelefone = inputTelefone.value.replace(/\D/g, '');

        // Formata o número de telefone com parênteses e traço
        let numeroFormatado = '';
        for (let i = 0; i < numeroTelefone.length; i++) {
        if (i === 0) {
            numeroFormatado += '(';
        } else if (i === 2) {
            numeroFormatado += ')';
        } else if (i === 7) {
            numeroFormatado += '-';
        }
        numeroFormatado += numeroTelefone[i];
        }

        inputTelefone.value = numeroFormatado;
    });
}
    formatarTelefone('telefone')

    function mostrarSenha(senhaId, confirmarSenhaId, checkId) {
        const senhaInput = document.getElementById(senhaId);
        const confSenhaInput = document.getElementById(confirmarSenhaId);
        const check = document.getElementById(checkId);

        check.addEventListener('change', function () {
            if (check.checked) {
            senhaInput.type = 'text';
            confSenhaInput.type = 'text';
            } else {
            senhaInput.type = 'password';
            confSenhaInput.type = 'password';
            }
        });
    }
    mostrarSenha('senha','confirmSenha','flexCheckDefault')
