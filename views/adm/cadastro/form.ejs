        background: none;
        padding: 0.4rem;
        font-size: 1rem;
        color: #d2d6da;
        transition: border 150ms cubic-bezier(0.4,0,0.2,1);
        }

    .user-label-receita {
        position: absolute;
        left: 11px;
        bottom: 16px;
        pointer-events: none;
        transform: translateY(1rem);
        transition: 150ms cubic-bezier(0.4,0,0.2,1);
    }

    .inpt-receita-el:focus, .inpt-receita-el:valid {
        outline: 0;
        border: 1px solid #4e4945;
        color: #131211;
    }

    .inpt-receita-el:focus ~ label, .inpt-receita-el:valid ~ label {
        transform: translateY(-50%) scale(0.8);
        background-color: white;
        padding: 0 0.2em;
        color: #131211;
        top: -2px;
        width: auto;
    }

    .inpt-receita-el::placeholder{
        font-size: .90rem;
        color: #aca9a9;
